<Window x:Class="ChercheMots.Ihm.DefinitionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChercheMots.Ihm"
        mc:Ignorable="d"
        SizeToContent="Height"
        FontSize="20"
        Title="Définitions" Height="450" Width="300">
    <StackPanel Margin="10">
        <Label Content="Mot :" />
        <TextBox x:Name="mot" Margin="10" />
        <Button Content="Chercher" Margin="10" Click="Chercher" />
        <TextBox x:Name="def" Margin="10" TextWrapping="Wrap" MinHeight="100" FontStyle="Italic" IsReadOnly="True" IsTabStop="False" />
    </StackPanel>
</Window>
